package test1;

public class Ergebnis extends Thread {

  private String name;
  private double runden;
  private double zeit = 0.0;

  public Ergebnis(String name) {
	this.name = name;
  }

  public double getZeit() {
	return zeit;
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  double aktuelleGeschwindigkeit = 0.8 + (double) (Math.random() * 0.4);
	  zeit += aktuelleGeschwindigkeit;
	  runden++;

	  if (runden == 5) {
		interrupt();
	  }

	  System.err.println(" " + name + ": " + runden + "/5,0");

	  try {
		Thread.sleep((long) aktuelleGeschwindigkeit);
	  } catch (InterruptedException e) {
		interrupt();
	  }
	}
  }
}
