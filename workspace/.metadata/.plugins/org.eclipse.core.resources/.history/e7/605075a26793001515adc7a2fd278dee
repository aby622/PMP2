package aufgabenblatt3;

import java.util.HashMap;
import java.util.function.BinaryOperator;

import aufgabenblatt2.Rechner.Operation;

public class Lokfuehrer extends Thread {

  public enum Operation {
	EINFAHREN, AUSFAHREN
  }
  private HashMap<Operation, Zug[]> map = new HashMap<Operation, Zug[]>();
  
  public Lokfuehrer(Zug[] zug, int gleis) {
	map.put(Operation.AUSFAHREN, zug = Rangierbahnhof.this.ausfahren(gleis));
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  try {
		wait();
	  } catch (InterruptedException e) {
	  }
	}
	synchronized(getClass()) {

	  System.err.println("ausgefahren");
	}
	synchronized(getClass()) {

	  System.err.println("eingefahren");
	}
  }
}
