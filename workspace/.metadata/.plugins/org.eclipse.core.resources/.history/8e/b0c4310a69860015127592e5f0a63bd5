package aufgabenblatt2;

public class Rennauto extends Thread {

  private double streckenlaenge = 0.0;
  private double zeit;
  private String name;

  public Rennauto(String name) {
	this.name = name;
  }

  public String getZeit() {
	return Double.toString(zeit);
  }

  public String getNames(){
	return name;
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  long geschwindigkeit = (long) (Math.random() * 400 + 800);
	  zeit += geschwindigkeit;
	  streckenlaenge++;

	  System.err.println(name + ": " + streckenlaenge + "/10.0");

	  if (streckenlaenge == 10) {
		interrupt();
	  }

	  try {
		Thread.sleep(geschwindigkeit);
	  } catch (InterruptedException e) {
		try {
		  Thread.sleep(2000);
		  interrupt();
		  zeit = zeit / 1000;
		  zeit = Math.round(10.0 * zeit) / 10.0;
		} catch (InterruptedException e1) {
		  e1.printStackTrace();
		}
	  }
	}
  }

}
