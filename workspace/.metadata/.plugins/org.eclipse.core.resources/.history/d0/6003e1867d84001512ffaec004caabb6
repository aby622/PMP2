package aufgabenblatt2;

import static org.junit.Assert.*;

import java.util.Arrays;
import java.util.LinkedList;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.Stream;

import org.junit.Test;

public class JUnitStreamStringArray<T> {

  @Test
  public void entferneNullTest() {
	
	String[] stringx = { "Eingabe ", "Äußeres ", null, "Strassen-Feger", " ein Haus" };
	List<T> liste = new LinkedList<T>();
	List<T> result = new LinkedList<T>();
	Stream<T> streamString;

	liste = (List<T>) Arrays.asList(stringx);
	streamString = liste.stream().filter(s -> s != null);
	liste = streamString.collect(Collectors.toList());
	
	result.add((T) "Eingabe ");
	result.add((T)"Äußeres ");
	result.add((T)"Strassen-Feger");
	result.add((T)" ein Haus");
	
	assertEquals(result, liste);
	
  }

  @Test
  public void entferneLeerzeichenTest() {
	
	String[] stringx = { "Eingabe ", "Äußeres ", null, "Strassen-Feger", " ein Haus" };
	List<String> liste = new LinkedList<String>();
	List<T> result = new LinkedList<T>();
	Stream<String> streamString;
	
	liste = (List<String>) Arrays.asList(stringx);
	streamString = liste.stream().map(String::trim);
	liste = streamString.collect(Collectors.toList());
	
	
	result.add((T) "Eingabe ");
	result.add((T)"Äußeres ");
	result.add((T)null);
	result.add((T)"Strassen-Feger");
	result.add((T)" ein Haus");
	
	assertEquals(result, liste);
	
  }

  @Test
  public void toCapitalsTest() {
	
  }

  @Test
  public void kuerzeAufAchtCharsTest() {
	
  }  
}
