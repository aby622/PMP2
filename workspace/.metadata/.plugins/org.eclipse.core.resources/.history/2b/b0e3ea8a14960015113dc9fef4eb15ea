package aufgabenblatt3;

public class Rangierbahnhof {

  private int anzahlGleise = 3;

  private Zug[] zuege = new Zug[anzahlGleise];

  public Zug[] getZug() {
	return zuege;
  }

  public synchronized Zug[] ausfahren(Zug[] zuege, int gleis) {
	
	if (zuege[gleis] instanceof Zug) {
	  try {
		zuege[gleis] = null;
		System.err.println("ausfahren");
		wait();
		return zuege;
		
	
	  } catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	  }
	}
	notify();
	return zuege;
  }
  
  public synchronized void einfahren(Zug[] zuege, int gleis) {
	if (zuege[gleis] == null) {
	  try {
		zuege[gleis] = new Zug();
		System.err.println("eingefahren");
		System.err.println("" +  zuege[0]+"   " + zuege[1]+"   " + zuege[2]);
		wait();
	  } catch (InterruptedException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	  }
	}
	notify();
  }
}
