package aufgabenblatt3;

public class Lokfuehrer extends Thread {

  Rangierbahnhof bf;
  
  public Lokfuehrer(int gleis) {
	bf.ausfahren(gleis);
	bf.einfahren(gleis);
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  try {
		wait();
	  } catch (InterruptedException e) {
	  }
	}
	Lokfuehrer lok1 = new Lokfuehrer(1);
  }

}
