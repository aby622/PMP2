package aufgabenblatt3;

public class Lokfuehrer extends Thread implements IbewegeZug {

  protected IbewegeZug aktion;
  
  public Lokfuehrer(IbewegeZug aktion){
	this.aktion = aktion;
  }
  public void parken(int gleise){
	aktion.parken(gleise);
  }
  @Override
  public void run(){
	aktion.parken(gleis);
  }
}
