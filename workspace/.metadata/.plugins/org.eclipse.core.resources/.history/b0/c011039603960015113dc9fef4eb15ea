package aufgabenblatt2;

import java.util.Observable;

import aufgabenblatt3.Simulation;

public class Visualisierung extends Observable {

  private Simulation simu = new Simulation(null);

  public Simulation getSimulation(){
	return simu;
  }
  public void setSimulation(Simulation simu) {
	this.simu = simu;
	setChanged();
	notifyObservers();
  }
  public static void main(String[] ags) {
	Thread eins = new Thread(new Simulation());
	eins.start();
  }

}
