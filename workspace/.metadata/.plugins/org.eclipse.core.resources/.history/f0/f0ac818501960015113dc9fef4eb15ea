package aufgabenblatt2;

import java.util.Observable;

import aufgabenblatt3.Simulation;
import aufgabenblatt3.Zug;
import javafx.application.Platform;
import javafx.concurrent.Task;

public class Visualisierung extends Observable {

  private Zug[] zuege;
  private Simulation simu = new Simulation();

  public void setSimulation(Zug[] zuege) {
	this.zuege = zuege;
	setChanged();
	notifyObservers();
  }

}
