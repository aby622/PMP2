package aufgabenblatt3;

public class Lokfuehrer extends Thread {

  public Lokfuehrer(Rangierbahnhof bf, int gleis) {
	bf.ausfahren(gleis);
	bf.einfahren(gleis);
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  try {
		wait();
	  } catch (InterruptedException e) {
	  }
	}
	Lokfuehrer lok1 = new Lokfuehrer(Rangierbahnhof.this.ausfahren(1), 1);
  }

}
