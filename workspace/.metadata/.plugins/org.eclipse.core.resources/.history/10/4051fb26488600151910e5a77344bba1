package test1;

public class Ergebnis extends Thread {

  private String name;
  private double runden;
  private double zeit = 0.0;

  public Ergebnis(String name) {
	this.name = name;
  }

  public double getZeit() {
	return zeit;
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  long aktuelleGeschwindigkeit = (long) (Math.random() * 400 + 800);
	  zeit += aktuelleGeschwindigkeit;
	  runden++;

	  
	  System.err.println(name + ": " + runden + "/5,0");
	  if (runden == 5) {
		zeit = zeit / 1000;
		zeit = Math.round(10.0 * zeit) / 10.0;
		interrupt();
	  }
	  try {
		Thread.sleep(aktuelleGeschwindigkeit);
	  } catch (InterruptedException e) {
		interrupt();
	  }
	}
  }
}
