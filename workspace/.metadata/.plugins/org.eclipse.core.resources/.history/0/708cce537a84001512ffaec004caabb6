package aufgabenblatt2;

import static org.junit.Assert.*;

import java.util.Arrays;
import java.util.LinkedList;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.Stream;

import org.junit.Test;

public class JUnitStreamStringArray {

  @Test
  public void entferneNullTest() {
	String[] stringx = { "Eingabe ", "Äußeres ", null, "Strassen-Feger", " ein Haus" };
	List<String> liste = new LinkedList<String>();
	Stream<String> streamString;
	liste = Arrays.asList(stringx);
	streamString = liste.stream().filter(s -> s != null);
	liste = streamString.collect(Collectors.toList());
	
	List<String> result = new LinkedList<String>();
	result.add("Eingabe ");
	result.add("Äußeres ");
	result.add("Strassen-Feger");
	result.add(" ein Haus");
	assertEquals(result, liste);
	
  }

  @Test
  public void entferneLeerzeichenTest() {
	
  }

  @Test
  public void toCapitalsTest() {
	
  }

  @Test
  public void kuerzeAufAchtCharsTest() {
	
  }
  
}
