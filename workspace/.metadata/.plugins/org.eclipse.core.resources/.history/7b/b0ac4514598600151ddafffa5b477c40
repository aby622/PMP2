package test;

import java.util.Arrays;
import java.util.Collections;
import java.util.Comparator;
import java.util.List;

public class Main {

  public static void main(String[] args) throws InterruptedException {

	Rennauto wagen1 = new Rennauto("Wagen1");
	Rennauto wagen2 = new Rennauto("Wagen2");
	Rennauto wagen3 = new Rennauto("Wagen3");

	List<Rennauto> autoListe = (List) Arrays.asList(wagen1, wagen2, wagen3);
	autoListe.add(wagen1);
	autoListe.add(wagen2);
	autoListe.add(wagen3);

	Rennabbruch abbruch = new Rennabbruch(wagen1, wagen2, wagen3);

	wagen1.start();
	wagen2.start();
	wagen3.start();
	abbruch.start();

	wagen1.join();
	wagen2.join();
	wagen3.join();

	Comparator<Rennauto> comparatorLambda = (Rennauto wagen11, Rennauto wagen22) -> {
	  return (int) (wagen11.getZeit() - wagen22.getZeit());
	};
	Collections.sort(autoListe, comparatorLambda);
	
	

	double[] ergebnis = { wagen1.getZeit(), wagen2.getZeit(), wagen3.getZeit() };
	Arrays.sort(ergebnis);
	System.out.print("Rennen zuende.\nErgebnis:\n");
	for (double result : ergebnis) {
	  System.out.println(result);
	}

  }

}
