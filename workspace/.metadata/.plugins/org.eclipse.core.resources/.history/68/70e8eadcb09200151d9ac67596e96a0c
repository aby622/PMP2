package aufgabenblatt3;

public class Simulation implements Runnable {

  Rangierbahnhof bahnhof1 = new Rangierbahnhof(3);
  
  @Override
  public void run() {
	try {
	  Thread.sleep(500);
	} catch (InterruptedException e) {
	  Lokfuehrer jim = new Lokfuehrer(bahnhof1, 0);
	  jim.start();
	}
  }

}
