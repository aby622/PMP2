package test;

import java.util.Arrays;

public class Rennauto extends Thread {

  private double streckenlaenge;
  private double zeit;
  String name;

  public Rennauto(String name) {
	this.streckenlaenge = 0.0;
	this.name = name;
  }

  public double getZeit() {
	return this.zeit;
  }
  
  public String getNName(){
	return name;
  }

  @Override
  public void run() {
	while (!isInterrupted()) {
	  long aktuelleGeschwindigkeit = (long) (Math.random() * (1200 - 800) + 800);
	  zeit += aktuelleGeschwindigkeit;
	  streckenlaenge++;

	  if (streckenlaenge == 10) {
		interrupt();
	  }

	  System.err.println(name + ": " + streckenlaenge + "/10,0");

	  try {
		Thread.sleep(aktuelleGeschwindigkeit);
	  } catch (InterruptedException e) {
		try {
		  Thread.sleep(2000);
		  interrupt();
		  zeit = zeit / 1000;
		  zeit = Math.round(10.0 * zeit) / 10.0;
		} catch (InterruptedException e1) {
		  e1.printStackTrace();

		}
	  }
	}
  }
}
